<section class="test">
    <h1 class="title" style="text-align: {{ section.settings.txt-align }}; color:{{ section.settings.color }};">{{ section.settings.title }}</h1>
</section>

{% schema %}
{
    "name": "Test",
    "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "select",
                "id": "txt-align",
                "label": "Align Text",
                "options": [
                    {
                        "value": "left",
                        "label": "Left"
                    },
                    {
                        "value": "center",
                        "label": "Center"
                    },
                    {
                        "value": "right",
                        "label": "Right"
                    }
                ]
            },
            {
                "type": "color",
                "id": "color",
                "label": "Color Text",
                "default": "#000000"
            }
        ],
        "presets": [
            {
                "name": "Test"
            }
        ]
}
{% endschema %}